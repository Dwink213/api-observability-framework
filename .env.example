# Target API Configuration
API_BASE_URL=https://api.example.com
API_AUTH_TYPE=apikey
API_KEY_SECRET_NAME=my-api-key
API_DATA_ENDPOINT=/v1/data
API_ID_FIELD=id
API_TIMESTAMP_FIELD=created_at

# Storage Configuration
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
STORAGE_TABLE_NAME=ApiData

# Secrets Manager
SECRETS_MANAGER_URL=https://your-keyvault.vault.azure.net

# Optional: OAuth2 (if API_AUTH_TYPE=oauth2)
API_CLIENT_ID_SECRET_NAME=oauth-client-id
API_CLIENT_SECRET_SECRET_NAME=oauth-client-secret
API_TOKEN_URL=https://api.example.com/oauth/token

# Optional: GraphQL (if API_QUERY_TYPE=graphql)
API_QUERY_TYPE=rest
API_SAMPLE_QUERY=?limit=5

# Optional: AI Analysis (Function 7)
AI_API_ENDPOINT=https://your-openai.openai.azure.com
AI_MODEL=gpt-4
ANALYSIS_LOOKBACK_DAYS=7